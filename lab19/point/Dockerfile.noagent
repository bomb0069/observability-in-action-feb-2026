FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm install

# Copy source code (without tracing.js)
COPY src ./src

# Build TypeScript
RUN npm run build

# Production stage
FROM node:20-alpine

WORKDIR /app

# Copy package files and install production dependencies only
COPY package*.json ./
RUN npm install --only=production

# Copy built files only (no tracing setup)
COPY --from=builder /app/dist ./dist

# Expose port
EXPOSE 8001

# Start without OpenTelemetry auto-instrumentation
CMD ["node", "dist/index.js"]
